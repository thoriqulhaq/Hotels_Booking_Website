<h1 class="text-danger">Visitor List</h1>
<br>
<table class="table table-default table-bordered table-hover table-responsive text-center">
  <thead class="table-light">
    <tr>
      <th>Room</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.room_num %></td>
        <td><%= hotel.first_name %></td>
        <td><%= hotel.last_name %></td>
        <td><%= hotel.phone_num %></td>
        <td><%= hotel.start_date %></td>
        <td><%= hotel.end_date %></td>
        <td><%= link_to 'Show', hotel, class:"text-decoration-none text-danger" %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel), class:"text-decoration-none text-danger" %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-decoration-none text-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Visitor', new_hotel_path, class:"btn btn-danger" %>
